    <h1>blabla</h1>
    <p>Entrez votre pseudo pour commencer</p>
    <input type="text" id="username" placeholder="Votre pseudo">
    <br>
    <button onclick="startGame()">Entrer dans le jeu</button>
  </div>

  <script>
    function startGame() {
      const username = document.getElementById('username').value.trim();
      if (username === "") {
        alert("Veuillez entrer un pseudo.");
        return;
      }
      localStorage.setItem('username', username); // Stocke le pseudo
      window.location.href = "game.html"; // Redirige vers le jeu
    }
  </script>
